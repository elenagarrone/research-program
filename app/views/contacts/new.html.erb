<section id="contact">
  <div class="container">
    <h2>Contact Us</h2>
    <h3>For any questions or further information, please fill up the form:</h3>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= simple_form_for Contact.new do |f| %>
          <%= f.input :email, :required => true, :placeholder => "Email" %>
          <%= f.input :title, :required => true, :placeholder => "Subject" %>
          <%= f.input :message, :as => :text, :required => true, :placeholder => 'Message...' %>
          <%= f.button :submit, 'Send message' %>
        <% end %>
      </div>
    </div>
    <div class="back-to-top hidden-sm hidden-md hidden-lg"><a href="#" data-offset-top="0"><i class="fa fa-arrow-up"></i> Back to the top </a></div>
  </div>
</section>